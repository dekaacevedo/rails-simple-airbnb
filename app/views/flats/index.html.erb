<div class="align-self-start">
  <h1 class="index-title">All our flats</h1>
  <p class="mb-4"> All <%= @flats.length %> flats.</p>
</div>



<div class="d-flex flex-wrap">
  <% @flats.each do |flat| %>
    <div class="border shadow-sm mb-3 me-3 new-card" style="width: 20rem;">
      <%= image_tag "#{flat.picture_url}", alt: "alttext", class: "card-img-top" %>
      <div class="">
        <div class="bg-light p-4">
          <h5 class="index-title"><%= flat.name %></h5>
          <p class=""><%= flat.address %></p>
          <div class="d-flex">
            <p class="me-3"><i class="fas fa-user-friends me-2 pt-3"></i><%= flat.number_of_guests %></p>
            <p class=""><i class="fas fa-dollar-sign me-2 pt-3"></i><%= flat.price_per_night %></p>
          </div>
        </div>

        <div class="p-2 buttons-card d-flex align-items-center">
          <%= link_to "More info", flat_path(flat), class: "btn btn-more-info" %>
          <%= link_to "Edit", edit_flat_path(flat),  class: "btn btn-edit" %>
          <%= link_to "Remove", flat_path(flat), class: " btn btn-remove", method: :delete, data: { confirm: "Are you sure?"} %>
        </div>

      </div>
    </div>
  <% end %>
</div>



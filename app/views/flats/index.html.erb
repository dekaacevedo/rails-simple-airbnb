<div class="align-self-start">
  <h1>All our flats</h1>
  <p> All <%= @flats.length %> flats.</p>
</div>



<div class="d-flex justify-content-between flex-wrap">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 20rem;">
      <%= image_tag "#{flat.image}", alt: "alttext", class: "card-img-top" %>
      <div class="">
        <div class="bg-light p-4">
          <h5 class=""><%= flat.name %></h5>
          <p class=""><%= flat.address %></p>
          <div class="d-flex">
            <p class=""><i class="fas fa-user-friends"></i><%= flat.number_of_guests %></p>
            <p class=""><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></p>
          </div>
        </div>

        <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_flat_path(flat),  class: "btn btn-warning" %>
        <%= link_to "Remove", flat_path(flat), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>



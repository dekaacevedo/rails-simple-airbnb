<div class="">
  <%= image_tag "#{@flat.picture_url}", alt: "alttext", class: "picture" %>
</div>

<div class="d-flex info-card">
  <div class="info-card-width me-4 ">
     <div class="bg-light p-4 mb-4 rounded shadow-sm">
      <h1><%= @flat.name %></h1>
      <p> <%= @flat.address %> </p>
    </div>

    <div class="bg-light p-4 mb-3 rounded shadow-sm info-card-height">
      <h4>A bit more about this flat...</h4>
      <p> <%= @flat.description %> </p>
    </div>
  </div>


  <div class="info-card-width2">
    <div class="bg-light p-4 mb-4 rounded shadow-sm">
      <p>Book this place!</p>
    </div>

    <div class="bg-light p-4 mb-4 rounded shadow-sm">
      <h4>Details</h4>
      <div class="d-flex">
        <p class=""><i class="fas fa-user-friends"></i><%= @flat.number_of_guests %></p>
        <p class=""><i class="fas fa-dollar-sign"></i><%= @flat.price_per_night %></p>
      </div>
    </div>

    <div class="d-flex justify-content-between bg-light p-4 rounded shadow-sm align-items-center">
      <p class="">Share</p>
      <div>
        <i class="fab fa-facebook-square fa-2x"></i>
        <i class="fab fa-twitter-square fa-2x"></i>
        <i class="fab fa-pinterest-square fa-2x"></i>
        <i class="fas fa-envelope-square fa-2x"></i>
      </div>
    </div>
  </div>
</div>





<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <div class="d-flex bg-light justify-content-between align-items-center nav-bar px-3 py-2">
      <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand navbar-title "  %>
      <%= link_to "Add a flat", new_flat_path, class: "btn btn-outline-primary rounded-3" %>
    </div>

    <div class="container mt-4 d-flex flex-column align-items-center">
      <%= yield %>
    </div>
  </body>
</html>
